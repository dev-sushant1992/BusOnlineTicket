<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC 
  		"-//OpenSymphony Group//XWork Validator 1.0//EN" 
  		"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
  		
<validators>
	<field name="departureTime">
		<field-validator type="required">
			<message>*Required</message>
		</field-validator>
		<field-validator type="timeIntegrity">
			<message>Please enter in the format HH:MM(24-hour format)</message>
		</field-validator>
	</field>
	
	<field name="arrivalTime">
		<field-validator type="required">
			<message>*Required</message>
		</field-validator>
		<field-validator type="timeIntegrity">
			<message>Please enter in the format HH:MM(24-hour format)</message>
		</field-validator>
	</field>
	<field name="busType">
		<field-validator type="requiredstring">
			<message>*Required</message>
		</field-validator>
	</field>
	<field name="name">
		<field-validator type="requiredstring">
			<message>*Required</message>
		</field-validator>
	</field>
	<field name="fare">
	<field-validator type="required">
			<message>*Required</message>
		</field-validator>
		<field-validator type="int">
			<message>*Required</message>
		</field-validator>
	</field>
	<field name="noOfSeats">
		<field-validator type="int">
			<param name="min">10</param>
			<param name="max">100</param>
			<message>Value should be between 10 and 100</message>
		</field-validator>
		<field-validator type="required">
			<message>*Required</message>
		</field-validator>
	</field>
	<field name="source">
		<field-validator type="requiredstring">
			<message>*Required</message>
		</field-validator>
	</field>
	<field name="destination">
		<field-validator type="requiredstring">
			<message>*Required</message>
		</field-validator>
	</field>
	<field name="busId">
		<field-validator type="required">
			<message>*Required</message>
		</field-validator>
		<field-validator type="int">
			<param name="min">100000</param>
			<param name="max">999999</param>
			<message>*Enter 6 digit Bus Id.</message>
		</field-validator>
	</field>
</validators>