<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC 
  		"-//OpenSymphony Group//XWork Validator 1.0//EN" 
  		"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
  	<validators>
	<field name="source">
		<field-validator type="requiredstring">
			<message>*</message>
		</field-validator>
	</field>
	
	<field name="destination">
		<field-validator type="requiredstring">
			<message>*</message>
		</field-validator>
	</field>
	
	<field name="dob">
		<field-validator type="requiredstring">
			<message>*</message>
		</field-validator>
	</field>
	
	<field name="noOfSeats">
		<field-validator type="requiredstring">
			<message>*</message>
		</field-validator>
		
		<field-validator type="int">
		<param name="min">1</param>
		<param name="max">30</param>
		<message>Enter between 1 & 30.</message>
		</field-validator>
	</field>
	
	<field name="busType">
		<field-validator type="requiredstring">
			<message>*Select any one option.</message>
		</field-validator>
	</field>
	
</validators>	